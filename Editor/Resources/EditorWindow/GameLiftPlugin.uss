.DescriptionBox{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
    align-self: stretch;
}

.LinkBox{
    display: flex;
    flex-direction: row;
    padding: 4px 0px;
    align-items: flex-start;
    gap: 12px;
    align-self: stretch;
}

.LinkBox > Label{
    margin: 6px;
}

.LinkBox__Divider{
    width: 1px;
    align-self: stretch;
    background-color: rgba(255, 255, 255, 0.2);
}

.link{
    color: #4C7EFF;
    font-family: Inter;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.Link__White{
    display: flex;
    align-items: center;

    color: #D2D2D2;
    text-align: center;
    font-family: Inter;
    font-style: normal;
    font-weight: 400;

    border-style: solid;
    border-bottom-width: 1px; 
    border-bottom-color: #D2D2D2; 
}

.Link__Blue{
    color: #4C7EFF;
    font-family: Inter;
    font-size: var(--font-size-paragraph-primary);
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.DescriptionBox__Divider{
    height: 1px;
    align-self: stretch;
    background-color: rgba(255, 255, 255, 0.20);
}

